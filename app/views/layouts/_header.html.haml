            %li.divider
            %li
              %a{href: "#"} One more separated link
      %form.navbar-form.navbar-left{role: "search"}
        .form-group
          = multiselect_list
        %button.btn.btn-default{type: "submit"} Submit
    %ul.nav.navbar-nav.navbar-right
      - if !current_user
        %li
          %a{href: "/users/sign_in"} Sign-in
        %li
          %a{href: "/users/sign_up"} Register
