          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            Account Settings
            %b.caret
          %ul.dropdown-menu
            %li
              %a{href: "#"} Manage Account
            %li
              %a{href: "#"} Another action
            %li
