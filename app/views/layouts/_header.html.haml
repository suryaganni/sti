%nav.navbar.navbar-default{role: "navigation"}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: "#"} &nbsp STI
  / Collect the nav links, forms, and other content for toggling
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav
      - if current_user
        %li.active
          %a{href: "/"} Home
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            Host Courses
            %b.caret
          %ul.dropdown-menu
            %li
              %a{href: "/institutes"} List All
            %li
              %a{href: "/institutes/new"} Create New
            %li
              %a{href: "#"} Something else here
            %li.divider
            %li
              %a{href: "#"} Separated link
            %li.divider
            %li
              %a{href: "#"} One more separated link
      = form_tag "/", :method => :post, :role => "search", :class => "navbar-form navbar-left" do
        .form-group
          = select_tag "category[ids][]", grouped_options_for_select(Category.categories_group), multiple: true, class: "filter_courses", style: "display: none;"
        = submit_tag "Submit", :class => "btn btn-default"
    %ul.nav.navbar-nav.navbar-right
      - if !current_user
        %li
          %a{href: "/users/sign_in"} Sign-in
        %li
          %a{href: "/users/sign_up"} Register
        %li
          = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in"
      - else
        %li
          %a{href: ""}= current_user.email
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            Account Settings
            %b.caret
          %ul.dropdown-menu
            %li
              %a{href: "#"} Manage Account
            %li
              %a{href: "#"} Another action
            %li
              %a{href: "#"} Something else here
            %li.divider
            %li
              %a{href: "/users/sign_out"} Logout
  / /.navbar-collapse
